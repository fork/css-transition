{
  "name": "@4rk/css-transition",
  "version": "0.1.4",
  "description": "Apply a CSS class for each stage of a CSS transition",
  "main": "dist/index.js",
  "author": "Fork Unstable Media GmbH <obj@fork.de>",
  "license": "MIT",
  "scripts": {
    "start": "parcel demo/index.html --open",
    "build": "bili --file-name index.js",
    "release": "kacl prerelease && kacl release && prettier --write CHANGELOG.md"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged; rimraf dist/; npm run build; git add dist/"
    }
  },
  "lint-staged": {
    "src/*.js": [
      "eslint --quiet --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@brightcove/kacl": "^0.1.6",
    "bili": "^4.7.1",
    "eslint": "^5.15.3",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3"
  },
  "repository": {
    "type": "git",
    "url": "https://lab.fork.de/ltechel/css-transition.git"
  }
}
